{% extends 'layout/base.html.twig' %}

{% block title pin.title  %}

{% block body %}
	<article>
		<h1>{{ pin.title }}</h1>
		<p>{{ pin.description }}</p>
	</article>

	<a href="{{ path('app_pin_update', { 'id': pin.id }) }}">Update</a>
	<a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.querySelector('#js-pin-delete-form').submit()">Delete</a>

	<form id="js-pin-delete-form" action="{{ path('app_pin_delete', { 'id': pin.id }) }}" method="post" style="display: none;">
		<input type="hidden" name="csrf_token" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
		<input type="hidden" name="_method" value="DELETE">
	</form>
{% endblock %}
