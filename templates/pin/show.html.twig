{% extends 'layout/base.html.twig' %}

{% block title pin.title  %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<article class="pin bg-white rounded shadow">
				<div class="mw-100 overflow-hidden">
					<a href="{{ path('app_pin_show', { 'id': pin.id }) }}">
						<img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeholder.jpg')) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}" class="w-100 rounded-top"/>
					</a>
				</div>
				<h2 class="pl-3 pt-3 h5">
					<a class="text-secondary text-decoration-none" href="{{ path('app_pin_show', { 'id': pin.id }) }}">{{ pin.title }}</a>
				</h2>
				<p class="pl-3 pb-3 text-muted">
					<small>
						Submited
						<time datetime="{{ pin.createdAt|date('Y-m-d H:i:s') }}">{{ pin.createdAt|ago }}</time>
						by [OWNER FULLNAME]
					</small>
				</p>
				<p class="pl-3 pb-3">{{ pin.description }}</p>
				<div class="pl-3 pb-3">
					<a class="btn btn-light" href="{{ path('app_pin_update', { 'id': pin.id }) }}">Update</a>
					<a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.querySelector('#js-pin-delete-form').submit()">Delete</a>

					<form id="js-pin-delete-form" action="{{ path('app_pin_delete', { 'id': pin.id }) }}" method="post" style="display: none;">
						<input type="hidden" name="csrf_token" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
						<input type="hidden" name="_method" value="DELETE">
					</form>
				</div>
			</article>
		</div>
	</div>
{% endblock %}
