{% extends 'layout/base.html.twig' %}

{% block title 'Panterest' %}

{% block body %}

	<h1>{{ pluralize(pins|length, 'pin') }}</h1>

	{% for pin in pins %}
		<article>
			<h2>
				<a href="{{ path('app_pin_show', { 'id': pin.id }) }}">{{ pin.title }}</a>
			</h2>
			<p>{{ pin.description|u.truncate(10, '...', false) }}</p>
			<p>{{ 'Submited ' ~ pin.createdAt|ago }}</p>
		</article>
	{% endfor %}
{% endblock %}
